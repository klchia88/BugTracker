@{
    //Layout = "~/Views/Shared/_LayoutTopBar.cshtml";
    Layout = "~/Views/Shared/_LayoutMenu.cshtml";
}

@model IEnumerable<BugTracker.Models.UserProjectsViewModel>

@{
    ViewBag.Title = "UserProjects";
}

<!-- ============================================================== -->
<!-- Page Title -->
<!-- ============================================================== -->
<div id="page-wrapper">
    <div class="container-fluid">

        <br />
        <h2>List of Users and their Project Assignments</h2>
        <hr /><br />

        <!-- ============================================================== -->
        <!-- Page Content -->
        <!-- ============================================================== -->
        @*<p>
                @Html.ActionLink("Create New", "Create")
            </p>*@
        <table class="table">
            <tr>
                <th>
                    Display Name
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>
                <th>
                    Projects
                </th>
                <th>
                    Action
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.User.DisplayName)
                        @*@item.User.DisplayName*@
                    </td>
                    <td>
                        @item.User.FirstName
                    </td>
                    <td>
                        @item.User.LastName
                    </td>
                    <td>
                        @foreach (var project in item.Projects)
                        {
                            <p>@project.Name</p><br />
                        }

                    </td>
                    <td>
                        @*@Html.ActionLink("Edit", "Edit", new { id = item.User.Id }) |*@
                        @Html.ActionLink("Details", "Details", new { id = item.User.Id })
                        @*@Html.ActionLink("Delete", "Delete", new { id = item.User.Id })*@
                    </td>
                </tr>
            }

        </table>
    </div><!-- div class="container-fluid" -->

</div><!-- div id="page-wrapper" -->
